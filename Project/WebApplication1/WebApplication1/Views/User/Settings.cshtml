            <input type="text" class="form-control" id="editPhoneNumber" name="PhoneNumber" placeholder="Enter new phone number">
        </div>
        <div class="form-group">
            <label for="editEmail">Email:</label>
            <input type="email" class="form-control" id="editEmail" name="Email" placeholder="Enter new email">
        </div>
        <input class="btn btn-primary btnsave" type="submit" value="Save" />
    </form>



