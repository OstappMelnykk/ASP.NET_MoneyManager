@model LoginViewModel

<div class="page">
    <div class="container">
        <div class="left">
            <div class="login">Sign in</div>
            <div class="eula">
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                <a asp-controller="Home" asp-action="index" class="backLink styled-button">Back</a>
            </div>
        </div>
        <div class="right">
            <div class="form">
                <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="All" class="AspValidationSummary"></div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email">
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password">
                    </div>

                    <div class="sisu">
                        <input type="submit" id="submit" value="Sign In">
                        <a asp-controller="Account" asp-action="Register" id="link-button" class="styled-button">Sign Up?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    .page {
        background-color: white;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .container {
        margin-top: 100px;
        border-radius: 10px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        height: 60vh;
        background-color: white;
        border: black 1px solid;
        box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.51);
    }

    .left, .right {
        flex: 1;
        padding: 20px;
    }

    .left {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .login, .eula {
        margin-bottom: 20px;
    }

    .form {
        max-width: 300px;
        margin: auto;
    }

    .AspValidationSummary {
        color: red;
    }

    .sisu {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .styled-button {
        text-decoration: none;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border-radius: 5px;
        border: none;
        display: inline-block;
    }

        .styled-button:hover {
            background-color: white;
            color: #007bff;
            border: #007bff 1px solid;
        }

    #submit {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
    }

        #submit:hover {
            color: #28a745;
            border: #28a745 1px solid;
            background-color: white;
        }

    a:hover {
        text-decoration: none;
        color: white;
    }

    button:hover {
        color: white;
    }

    .login {
        font-size: 30px;
    }

    p {
        margin-bottom: 35px;
    }

    .eula {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
        padding-bottom: 15px;
        margin-top: 35px;
    }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>