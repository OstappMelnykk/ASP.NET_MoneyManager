<div class="container mt-4">
    <div class="account-info">
        <div>
            <p><strong>Account name:</strong> Wallet</p>
            <p><strong>Balance:</strong> balance</p>
        </div>
        <div class="account-settings">
            <button class="btn btn-outline-secondary">Account settings</button>
        </div>
    </div>
    <div>
        <p><strong>Last transactions</strong></p>
    </div>
    <div class="transaction-table">
        <table class="table fixed-width">
            <thead>
                <tr>
                    <td>Description</td>
                    <td>Sum</td>
                    <td>Date</td>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.LastTransactions != null)
                {
                    @foreach (var item in ViewBag.LastTransactions)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td>@item.Sum</td>
                            <td>@item.Date</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="actions">
        @* <div class="btn btn-outline-primary afirst">
            <a asp-action="index" asp-controller="Transaction">See more</a>
        </div> *@
        @* <div class="btn btn-primary asecond">
            <a asp-action="index" asp-controller="Transaction">Add transaction</a>
        </div> *@
        <a asp-action="index" asp-controller="Transaction" class="btn btn-outline-primary afirst aclas" >See more</a>
        <a asp-action="index" asp-controller="Transaction" class="btn btn-primary asecond aclas">Add transaction</a>
    </div>
</div>


