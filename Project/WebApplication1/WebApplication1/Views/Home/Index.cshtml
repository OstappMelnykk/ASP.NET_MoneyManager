@if (User.Identity.IsAuthenticated)
{
    <div>
        <h1>NAME:     @User.Identity.Name!!!!!!!!!!!!!</h1>
        <form method="post" asp-controller="Account" asp-action="Logout">
            <section>
                <nav>
                    <ul class="menuItems">
                        <li>
                            <button type="submit">Log Out</button>
                        </li>
                    </ul>
                </nav>
            </section>
        </form>
    </div>
}
else
{
    <div class="text-center">
        <section>
            <nav>
                <ul class="menuItems">
                    <li><a asp-controller="Account" asp-action="Login" class="btn btn-success btn-custom">Log In</a></li>
                    <li><a asp-controller="Account" asp-action="Register" class="btn btn-info btn-custom">Register</a></li>
                </ul>
            </nav>
        </section>

    </div>
}



<div>
    Is Authenticated: @User.Identity.IsAuthenticated
    <br></br>
    Name: @User.Identity.Name
</div>
<br></br>

<div class="data1">




    <p>UserMainPage</p>
    <p> Email : @ViewBag.Email </p>
    <p> UserId : @ViewBag.UserId </p>
    <p> Name : @ViewBag.Name </p>

    <br />
    <p> AccountName : @ViewBag.AccountName </p>
    <p> Balance : @ViewBag.AccountBalance </p>
</div>
<br />
<table>

    <tr>
        <th>Description</th>
        <th>Sum</th>
        <th>Date</th>
    </tr>
    @if (ViewBag.LastTransactions != null)
    {
        @foreach (var item in ViewBag.LastTransactions)
        {
            <tr>
                <th>@item.Description</th>
                <th>@item.Sum</th>
                <th>@item.Date</th>
            </tr>
        }
    }



</table>
<br></br>
<a asp-action="index" asp-controller="Transaction">SEE MORE</a>


<br></br>
<br></br>
<a asp-action="index" asp-controller="Transaction">Add transaction</a>






